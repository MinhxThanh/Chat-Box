{
  "manifest_version": 3,
  "name": "Chat Box: Chat with all AI models (DeepSeek, Claude, Groq, Ollama, etc.)",
  "version": "0.6.1",
  "description": "AI chat, advanced web search, document interaction, and more into a convenient sidebar.",
  "action": {
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "tabs",
    "commands",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch?*"],
      "js": ["contentScript.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["selectionObserver.js"],
      "css": ["selection.css"]
    }
  ],
  "commands": {
    "toggle_sidebar": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      },
      "description": "Toggle sidebar open/close"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/action-icons/*.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
